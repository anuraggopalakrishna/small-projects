{
  "manifest_version": 3,
  "name": "YouQR - Instant QR Code",
  "version": "0.1",
  "description": "Generate QR code for the current active tab. Easily access your current tab on mobile.",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
